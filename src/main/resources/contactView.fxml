<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sathi.contactbook.ContactController">
    <HBox AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <TableView fx:id="contactTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="500.0" prefWidth="474.0" HBox.hgrow="ALWAYS">
            <placeholder>
                <Label text="No Contacts to display" />
            </placeholder>
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="phoneColumn" prefWidth="75.0" text="Phone Number" />
                <TableColumn fx:id="emailColumn" prefWidth="75.0" text="E-Mail" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <VBox alignment="CENTER" prefHeight="500.0" prefWidth="258.0" scaleShape="false" spacing="15.0" HBox.hgrow="ALWAYS">
            <VBox fx:id="mainActionsVBox" alignment="TOP_CENTER" spacing="15.0">
                <Button mnemonicParsing="false" onAction="#showAddContactForm" prefHeight="30.0" prefWidth="150.0" text="Add New Contact" VBox.vgrow="ALWAYS" />
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteButtonClick" prefHeight="30.0" prefWidth="150.0" text="Delete" VBox.vgrow="ALWAYS" />
            </VBox>
            <VBox fx:id="addContactFormVBox" alignment="TOP_CENTER" fillWidth="false" focusTraversable="true" managed="false" prefHeight="104.0" prefWidth="133" spacing="15.0" visible="false">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="New Contact Details" VBox.vgrow="ALWAYS" />
                <TextField fx:id="nameTextField" prefWidth="220" promptText="Name" VBox.vgrow="ALWAYS" />
                <TextField fx:id="phoneTextField" prefWidth="220" promptText="Phone Number" VBox.vgrow="ALWAYS" />
                <TextField fx:id="emailTextField" prefWidth="220" promptText="E-Mail" VBox.vgrow="ALWAYS" />
                <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                    <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButtonClick" prefWidth="80.0" text="Save" HBox.hgrow="ALWAYS" />
                    <Button mnemonicParsing="false" onAction="#hideAddContactForm" prefWidth="80.0" text="Cancel" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>
        </VBox>
    </HBox>
</AnchorPane>
